<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--dialogk-->
    <style name="DialogKStyle" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogKTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">14dp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogKBtnCancelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:backgroundTint">@color/blue_light</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="DialogKBtnSureStyle" parent="DialogKBtnCancelStyle">
        <item name="android:backgroundTint">@color/blue_normal</item>
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="DialogKAnimAlphaStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/anim_alpha_out</item>
    </style>

    <!--layoutk-->
    <style name="LayoutKAmountStyle">
        <item name="layoutKAmount_btn_textSize">14sp</item>
        <item name="layoutKAmount_btn_textColor">#999999</item>
        <item name="layoutKAmount_btn_size">25dp</item>
        <item name="layoutKAmount_btn_background">#eeeeee</item>
        <item name="layoutKAmount_margin">5dp</item>

        <item name="layoutKAmount_num_textSize">16sp</item>
        <item name="layoutKAmount_num_textColor">#000000</item>
        <item name="layoutKAmount_num_size">30dp</item>
        <item name="layoutKAmount_num_background">@android:color/white</item>
        <item name="layoutKAmount_num_defaultValue">1</item>
        <item name="layoutKAmount_num_minValue">1</item>
        <!--        <item name="max_value">1</item> //不配置，就是Int.max_value-->
    </style>

    <style name="BtnCancelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/gray_light</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@android:color/darker_gray</item>
    </style>

    <style name="LayoutKInputItem_TitleAppearanceStyle">
        <item name="titleAppearance_titleColor">@android:color/black</item>
        <item name="titleAppearance_titleSize">16sp</item>
        <item name="titleAppearance_leftPadding">2dp</item>
        <item name="titleAppearance_minWidth">100dp</item>
    </style>

    <style name="LayoutKInputItem_InputAppearanceStyle">
        <item name="inputAppearance_hintColor">@color/blue_light</item>
        <item name="inputAppearance_inputColor">@color/blue_normal</item>
        <item name="inputAppearance_textSize">15sp</item>
    </style>

    <style name="LayoutKInputItem_LineAppearanceStyle">
        <item name="lineAppearance_color">@color/blue_dark</item>
        <item name="lineAppearance_height">1.5dp</item>
        <item name="lineAppearance_leftMargin">0dp</item>
        <item name="lineAppearance_rightMargin">0dp</item>
    </style>

    <!--searchk-->
    <style name="SearchKLayoutStyle">
        <item name="searchKLayout_search_icon">&#xe987;</item>
        <item name="searchKLayout_search_iconSize">16sp</item>
        <item name="searchKLayout_search_iconPadding">10dp</item>
        <item name="searchKLayout_search_background">@drawable/searchk_search_background</item>
        <item name="searchKLayout_search_textSize">16sp</item>
        <item name="searchKLayout_search_textColor">#000000</item>

        <item name="searchKLayout_clear_icon">&#xe60b;</item>
        <item name="searchKLayout_clear_iconSize">16sp</item>

        <item name="searchKLayout_hint_textSize">16sp</item>
        <item name="searchKLayout_hint_textColor">#888888</item>
        <item name="searchKLayout_hint_gravity">left</item>

        <item name="searchKLayout_keyword_icon">&#xe611;</item>
        <item name="searchKLayout_keyword_iconSize">14sp</item>
        <item name="searchKLayout_keyword_iconColor">#ffffff</item>
        <item name="searchKLayout_keyword_background">@drawable/searchk_keyword_background</item>
        <item name="searchKLayout_keyword_maxLength">10</item>
        <item name="searchKLayout_keyword_padding">4dp</item>
    </style>

    <!--btnk-->
    <style name="BtnKSpinnerFormStyle">
        <item name="android:colorControlNormal">@android:color/transparent
        </item> <!--改变了spinner的箭头颜色  -->
    </style>

    <!--navk-->
    <style name="NavKBarStyle">
        <item name="navKBar_title_textSize">17sp</item>
        <item name="navKBar_title_textColor">@android:color/black</item>

        <item name="navKBar_subTitle_textSize">14sp</item>
        <item name="navKBar_subTitle_textColor">@color/gray_normal</item>
        <item name="navKBar_subTitle_marginTop">1dp</item>

        <item name="navKBar_lineColor">@color/gray_light</item>
        <item name="navKBar_lineWidth">0dp</item>
    </style>
</resources>