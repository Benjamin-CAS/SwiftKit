<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--layoutmk-->
    <style name="LayoutMKAmountStyle">
        <item name="layoutMKAmount_btn_textSize">14sp</item>
        <item name="layoutMKAmount_btn_textColor">#999999</item>
        <item name="layoutMKAmount_btn_size">25dp</item>
        <item name="layoutMKAmount_btn_background">#eeeeee</item>
        <item name="layoutMKAmount_margin">5dp</item>

        <item name="layoutMKAmount_num_textSize">16sp</item>
        <item name="layoutMKAmount_num_textColor">#000000</item>
        <item name="layoutMKAmount_num_size">30dp</item>
        <item name="layoutMKAmount_num_background">@android:color/white</item>
        <item name="layoutMKAmount_num_defaultValue">1</item>
        <item name="layoutMKAmount_num_minValue">1</item>
        <!--        <item name="max_value">1</item> //不配置，就是Int.max_value-->
