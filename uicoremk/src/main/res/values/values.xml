    <!--searchmk-->
    <style name="SearchMKLayoutStyle">
        <item name="searchMKLayout_search_icon">&#xe987;</item>
        <item name="searchMKLayout_search_iconSize">16sp</item>
        <item name="searchMKLayout_search_iconPadding">10dp</item>
        <item name="searchMKLayout_search_background">@drawable/searchmk_search_background</item>
        <item name="searchMKLayout_search_textSize">16sp</item>
        <item name="searchMKLayout_search_textColor">#000000</item>

        <item name="searchMKLayout_clear_icon">&#xe60b;</item>
        <item name="searchMKLayout_clear_iconSize">16sp</item>

        <item name="searchMKLayout_hint_textSize">16sp</item>
        <item name="searchMKLayout_hint_textColor">#888888</item>
        <item name="searchMKLayout_hint_gravity">left</item>

        <item name="searchMKLayout_keyword_icon">&#xe611;</item>
        <item name="searchMKLayout_keyword_iconSize">14sp</item>
        <item name="searchMKLayout_keyword_iconColor">#ffffff</item>
        <item name="searchMKLayout_keyword_background">@drawable/searchmk_keyword_background</item>
        <item name="searchMKLayout_keyword_maxLength">10</item>
        <item name="searchMKLayout_keyword_padding">4dp</item>
